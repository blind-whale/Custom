<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ***************环形显示倒计时进度条************************************************* -->
    <declare-styleable name="CountDownView">
        <attr name="cd_circle_radius" format="dimension"></attr>
        <attr name="cd_circle_color" format="color"></attr>
        <attr name="cd_arc_width" format="dimension"></attr>
        <attr name="cd_arc_color" format="color"></attr>
        <attr name="cd_text_color" format="color"></attr>
        <attr name="cd_text_size" format="dimension"></attr>
        <attr name="cd_time_unit" format="string"></attr>
        <attr name="cd_time" format="integer"></attr>
        <attr name="cd_direction" format="enum">
            <!-- 顺时针方向 进度条增长 -->
            <enum name="clockwise_ascent" value="1"></enum>
            <!-- 顺时针方向 进度条递减 -->
            <enum name="clockwise_descent" value="2"></enum>
            <!-- 逆时针方向 进度条增长 -->
            <enum name="anticlockwise_ascent" value="3"></enum>
            <!-- 逆时针方向 进度条递减 -->
            <enum name="anticlockwise_descent" value="4"></enum>
        </attr>

        <!-- 进度条的起始位置 -->
        <attr name="cd_start_point" format="enum">
            <enum name="left" value="-180"></enum>
            <enum name="top" value="-90"></enum>
            <enum name="right" value="0" ></enum>
            <enum name="bottom" value="90"></enum>
        </attr>
    </declare-styleable>
</resources>